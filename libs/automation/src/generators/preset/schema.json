{
  "$schema": "https://json-schema.org/schema",
  "$id": "Preset",
  "title": "Create a project workspace",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the project",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the project name?"
    },
    "scope": {
      "type": "string",
      "description": "The npm scope prefix (e.g. @acme, @myorg)",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What is the npm scope? (e.g. @acme, @myorg)"
    },
    "includeDirectus": {
      "type": "boolean",
      "description": "Whether to include Directus CMS setup (Docker Compose, env sample, Directus dependencies)",
      "default": true
    }
  },
  "required": ["name", "scope"]
}
