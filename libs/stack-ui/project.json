{
  "name": "stack-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/stack-ui/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "changelog": true,
        "repositoryUrl": "https://github.com/OKAMca/stack.git",
        "npm": true,
        "github": true,
        "branches": [
          "main"
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/stack-ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/stack-ui",
        "tsConfig": "libs/stack-ui/tsconfig.lib.json",
        "project": "libs/stack-ui/package.json",
        "entryFile": "libs/stack-ui/src/index.ts",
        "external": ["react", "react-dom", "react/jsx-runtime", "react-aria", "react-stately"],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "swc",
        "defaultConfiguration": "production",
        "assets": [
          {
            "glob": "libs/stack-ui/README.md",
            "input": ".",
            "output": "."
          }
        ],
        "configurations": {
          "development": {
            "mode": "development"
          },
          "production": {
            "mode": "production"
          }
        }
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/stack-ui/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/stack-ui",
        "configDir": "libs/stack-ui/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
