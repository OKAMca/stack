# pnpm configuration for Nx monorepo
# See: https://pnpm.io/npmrc

# Hoist all dependencies to root node_modules for compatibility
# Required for TypeScript type resolution across the monorepo
shamefully-hoist=true

# Allow peer dependency mismatches (common in monorepos with mixed package versions)
strict-peer-dependencies=false

# Link workspace packages when version range matches (matches npm workspaces behavior)
link-workspace-packages=true
