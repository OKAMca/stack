      "@okam/directus-next": ["libs/directus/directus-next/src/index.ts"],
      "@okam/directus-next-component": ["libs/directus/directus-next-component/src/index.ts"],
      "@okam/directus-next-component/server": ["libs/directus/directus-next-component/src/server.ts"],
