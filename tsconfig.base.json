{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@demo/directus-data-query": ["apps/directus-data-query/src/index.ts"],
      "@okam/automation": ["libs/automation/src/index.ts"],
      "@okam/core-lib": ["libs/stack/core-lib/src/index.ts"],
      "@okam/directus-block": ["libs/directus/directus-block/src/index.ts"],
      "@okam/directus-block/server": ["libs/directus/directus-block/src/server.ts"],
      "@okam/directus-flexible-content": ["libs/directus/directus-flexible-content/src/index.ts"],
      "@okam/directus-flexible-content/server": ["libs/directus/directus-flexible-content/src/server.ts"],
      "@okam/directus-next": ["libs/directus/directus-next/src/index.ts"],
      "@okam/directus-next-component": ["libs/directus/directus-next-component/src/index.ts"],
      "@okam/directus-next-component/server": ["libs/directus/directus-next-component/src/server.ts"],
      "@okam/directus-next/server": ["libs/directus/directus-next/src/server.ts"],
      "@okam/directus-node": ["libs/directus/directus-node/src/index.ts"],
      "@okam/directus-node/edge": ["libs/directus/directus-node/src/edge.ts"],
      "@okam/directus-query": ["libs/directus/directus-query/src/index.ts"],
      "@okam/directus/directus-next": ["libs/directus/directus-next/src/index.ts"],
      "@okam/logger": ["libs/stack/logger/src/index.ts"],
      "@okam/next-component": ["libs/stack/next-component/src/index.ts"],
      "@okam/next-component/server": ["libs/stack/next-component/src/server.ts"],
      "@okam/stack-ui": ["libs/stack/stack-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
